<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_normal"
    android:layout_marginEnd="@dimen/spacing_normal"
    android:layout_marginBottom="@dimen/spacing_min"
    android:background="@drawable/bg_semirounded_white"
    android:paddingVertical="@dimen/spacing_min"
    android:paddingHorizontal="@dimen/spacing_half">

    <ImageView
        android:id="@+id/iv_car_icon"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:tint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_help_circle_outline" />

    <TextView
        android:id="@+id/tv_car_id"
        style="@style/CarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAA1521"
        app:layout_constraintBottom_toTopOf="@+id/tv_value_1"
        app:layout_constraintEnd_toStartOf="@+id/tv_value_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_car_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_value_1"
        style="@style/CardValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30/12/20 13:06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_car_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_id"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/tv_value_2"
        style="@style/CardValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_value_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_value_3" />

    <TextView
        android:id="@+id/tv_value_3"
        style="@style/CardValueMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 2.05"
        app:layout_constraintBottom_toTopOf="@+id/tv_value_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>